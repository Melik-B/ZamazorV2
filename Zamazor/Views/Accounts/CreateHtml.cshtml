﻿<h2>New Category</h2>

<form action="/Accounts/Create" method="post">
    <div class="mb-3">
        <label for="tbName" class="form-label">Name</label>
        <input type="text" class="form-control" id="tbName" name="Name" />
    </div>
    <div class="mb-3">
        <label for="tbDescription" class="form-label">Description</label>
        <textarea class="form-control" id="tbDescription" rows="3" name="Description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>